{
  "name": "email-survey-app",
  "version": "1.0.0",
  "description": "App to serve email surveys to customers",
  "license": "MIT",
  "author": "Mateo Vargas",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": "22.13.0",
    "npm": "11.5.2"
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "body-parser": "^2.2.1",
    "colors": "^1.4.0",
    "concurrently": "^9.2.1",
    "cookie-session": "^2.1.1",
    "express": "^5.1.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.0",
    "nodemon": "^3.1.11",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "path-parser": "^6.1.0",
    "stripe": "^20.1.0"
  },
  "devDependencies": {
    "cypress": "^15.9.0"
  }
}
